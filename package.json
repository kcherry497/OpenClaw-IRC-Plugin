{
  "name": "@openclaw/irc",
  "version": "1.0.0",
  "description": "IRC channel plugin for OpenClaw with SASL+TLS authentication",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "openclaw.plugin.json"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "openclaw",
    "irc",
    "channel",
    "plugin",
    "sasl",
    "tls"
  ],
  "author": "OpenClaw Team",
  "license": "MIT",
  "dependencies": {
    "@types/ws": "^8.18.1",
    "irc-framework": "^4.13.1",
    "ws": "^8.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "openclaw": "^2026.1.24-3",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "openclaw": ">=1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "openclaw": {
    "extensions": [
      "./dist/index.js"
    ]
  }
}
